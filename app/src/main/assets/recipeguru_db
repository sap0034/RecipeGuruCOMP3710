BEGIN TRANSACTION;
DROP TABLE IF EXISTS `android_metadata`;
CREATE TABLE IF NOT EXISTS `android_metadata` (
	`locale`	text DEFAULT 'en_US'
);
INSERT INTO `android_metadata` VALUES ('en_US');
DROP TABLE IF EXISTS `RecipeInstructionStep`;
CREATE TABLE IF NOT EXISTS `RecipeInstructionStep` (
	`_id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`RecipeID`	INTEGER,
	`RecipeInstructionText`	TEXT,
	`isArchived`	INTEGER,
	FOREIGN KEY(`RecipeID`) REFERENCES `Recipe`(`_id`)
);
DROP TABLE IF EXISTS `RecipeImage`;
CREATE TABLE IF NOT EXISTS `RecipeImage` (
	`_id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`RecipeImagePath`	TEXT,
	`isArchived`	INTEGER,
	`RecipeID`	INTEGER,
	FOREIGN KEY(`RecipeID`) REFERENCES `Recipe`(`_id`)
);
DROP TABLE IF EXISTS `Recipe`;
CREATE TABLE IF NOT EXISTS `Recipe` (
	`_id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`RecipeName`	TEXT,
	`CookTime`	NUMERIC,
	`PrepTime`	NUMERIC,
	`TotalTime`	TEXT,
	`Servings`	TEXT,
	`isFavorite`	INTEGER,
	`isArchived`	INTEGER,
	`AccountID`	INTEGER,
	FOREIGN KEY(`AccountID`) REFERENCES `Account`(`_id`)
);
DROP TABLE IF EXISTS `Measurement`;
CREATE TABLE IF NOT EXISTS `Measurement` (
	`_id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`MeasurementText`	TEXT
);
INSERT INTO `Measurement` VALUES (1,'Cup');
INSERT INTO `Measurement` VALUES (2,'Tsp');
INSERT INTO `Measurement` VALUES (3,'Tbsp');
INSERT INTO `Measurement` VALUES (4,'Ounce
');
INSERT INTO `Measurement` VALUES (5,'Pint');
INSERT INTO `Measurement` VALUES (6,'Gallon');
INSERT INTO `Measurement` VALUES (7,'Quart');
DROP TABLE IF EXISTS `Ingredient`;
CREATE TABLE IF NOT EXISTS `Ingredient` (
	`_id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`RecipeID`	INTEGER,
	`isArchived`	INTEGER,
	`MeasurementID`	INTEGER,
	`IngredientAmount`	INTEGER,
	`IngredientText`	TEXT,
	FOREIGN KEY(`MeasurementID`) REFERENCES `Measurement`(`_id`),
	FOREIGN KEY(`RecipeID`) REFERENCES `Recipe`(`_id`)
);
DROP TABLE IF EXISTS `Account`;
CREATE TABLE IF NOT EXISTS `Account` (
	`_id`	INTEGER PRIMARY KEY AUTOINCREMENT,
	`FirstName`	TEXT,
	`LastName`	TEXT,
	`EmailAddress`	TEXT,
	`CreatedDateTime`	TEXT,
	`isArchived`	INTEGER,
	`Password`	TEXT
);
COMMIT;
