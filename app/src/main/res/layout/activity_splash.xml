<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_splash"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.auburn.eng.csse.comp3710.a2b2b.recipeguruapplication.Splash"
    android:background="@color/colorWhite">

    <View
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorWhite" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="14dp"
        android:adjustViewBounds="true"
        android:background="@color/colorWhite"
        android:contentDescription="@string/app_name"
        android:scaleType="center"
        android:src="@drawable/applogo"
        android:visibility="visible"
        tools:scaleType="centerCrop" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="155dp"
        android:fontFamily="serif"
        android:text="@string/group_members"
        android:textAppearance="@style/SemiBold"
        android:textColor="@color/colorNavy"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="@string/group_members" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="77dp"
        android:fontFamily="serif"
        android:text="@string/group_name"
        android:textAppearance="@style/SemiBold"
        android:textColor="@color/colorNavy"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@string/group_name" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:fontFamily="serif"
        android:text="@string/semester_class"
        android:textAppearance="@style/SemiBold"
        android:textColor="@color/colorNavy"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="@string/semester_class" />


</RelativeLayout>
